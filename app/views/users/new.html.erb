<h1>Sign Up</h1>

<%= render partial: "layout/errors", locals: {object: @user} %>


<%= form_for(@user) do |u| %>
  <%= u.label :username %>
<%= u.text_field :username %>
<br>
<br>
<%= u.label :email %>
<%= u.email_field :email, required: true  %>
<br>
<br>
<%= u.label :password %>
<%= u.password_field :password %>
<br>
<br>
<%= u.submit 'Submit' %>

<% end %>